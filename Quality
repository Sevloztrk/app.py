
import streamlit as st

st.set_page_config(page_title="Coffee Quality Data", layout="wide")
st.markdown("## Statistics of Coffe Quailty in 2023")
st.write("Statistics of Coffe Quailty in 2023")
st.write("\n")


import os
from kaggle.api.kaggle_api_extended import KaggleApi

api = KaggleApi()
api.authenticate()

# Veri setini indirme
dataset = 'dataset_name'  # İndirmek istediğiniz veri setinin adı
api.dataset_download_files(dataset, path='data/', unzip=True)

import pandas as pd

# Veri dosyasının adı
data_file = 'data/dataset_file.csv'  # İndirdiğiniz dosyanın adı ve yolu
data = pd.read_csv(data_file)
print(data.head())  # Veriyi kontrol etmek için ilk birkaç satırı gösterin

# Tüm yıllar ve aylar için veri işleme
for year in data['date'].dt.year.unique():
    for month in range(1, 13):
        filtered_data = data[(data['date'].dt.year == year) & (data['date'].dt.month == month)]
        print(f"Year: {year}, Month: {month}")
        print(filtered_data.head())
